@{
    ViewData["Title"] = "Clients";
}


@foreach (var client in Model)
{

    <div class="card bg-light mb-3" style="max-width: 18rem;">
        <div class="card-body text-center">
            <h5 class="card-title">@client.GetClientName()</h5>
            <p class="card-text">
                <a href="/client/@client.GetId()/delete">Remove From List</a>
            </p>
        </div>
    </div>

}

<a href="/client/new" class="btn btn-primary">Add Another Client</a>
<a href="/client/deleteall" class="btn btn-primary">Clear Client List</a>