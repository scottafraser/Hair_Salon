@{
    ViewData["Title"] = "Specialties";
}

<div class="card-deck">

    @foreach (var specialty in Model)
    {
    <div class="card bg-light">
        <div class="card-body text-center">
            <h5 class="card-title">@specialty.Name</h5>
            <p class="card-text"><a href="/stylist/@specialty.Id/stylistlist">See Stylists With This Specialty</a></p>

            <a href="/specialty/@specialty.Id/delete" class="btn btn-primary">Remove</a>
        </div>
    </div>
    }

</div>
<br>
<a href="/specialty/new" class="btn btn-primary">Add Another Specialty</a>   